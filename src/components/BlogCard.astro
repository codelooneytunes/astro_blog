---

import { getCollection, type CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";
// import FormattedDate from "../../components/FormattedDate.astro";



const { post, tags } = Astro.props;
console.log(post.data.tags)


---





<article class="flex max-w-xl flex-col items-start justify-between p-4 border border-green-600/80 rounded-lg shadow-lg" >
    <div class="flex items-center gap-x-4 text-xs">
      <time datetime="2020-03-16" class="text-gray-500"><FormattedDate date={post.data.pubDate} ></FormattedDate></time>

    
      {
        post.data.tags.map((tag: [string]) => (
        <a href={`/tag/${tag}/`} class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">{tag}</a>
        ))
      }
    
    
    </div>
    <div class="group relative">
      <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
        <a href={`/blog/${post.slug}/`}>
          <span class="absolute inset-0"></span>
          {post.data.title}
        </a>
      </h3>
      <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600"> {post.data.description}</p>
    </div>

  </article>